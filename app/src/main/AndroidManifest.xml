            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8596476786252416~1766070713"/>
        <activity android:name=".SplashActivity" android:theme="@style/Theme.Design.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:theme="@style/Theme.Design.Light.NoActionBar"                                                                                                                                                                                                                                                                                                            >

